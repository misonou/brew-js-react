{
    "testEnvironment": "jsdom",
    "modulePathIgnorePatterns": [
        "<rootDir>/build/"
    ],
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/src/$1",
        "^brew-js/(.*)$": "<rootDir>/../brew-js/src/$1",
        "^zeta-dom/(.*)$": "<rootDir>/../zeta-dom/src/$1",
        "^zeta-dom-react/(.*)$": "<rootDir>/../zeta-dom-react/src/$1"
    },
    "extensionsToTreatAsEsm": [".jsx"],
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/index.js",
        "!src/include/**/*"
    ]
}
